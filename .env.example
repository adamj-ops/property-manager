# =============================================================================
# Everyday Properties - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# SUPABASE DATABASE
# =============================================================================
# Get these from: Supabase Dashboard > Project Settings > Database

# Connection pooling URL (for serverless/edge functions)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection URL (for migrations)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-min-32-characters-long"

# Your application URL
BETTER_AUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# =============================================================================
# EMAIL (Nodemailer)
# =============================================================================
# SMTP Configuration
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
EMAIL_FROM="noreply@everydayproperties.com"

# =============================================================================
# FILE STORAGE (Supabase Storage or Cloudflare R2)
# =============================================================================
# Supabase Storage (recommended with Supabase)
SUPABASE_URL="https://[PROJECT_REF].supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Or Cloudflare R2 (alternative)
# R2_ACCOUNT_ID=""
# R2_ACCESS_KEY_ID=""
# R2_SECRET_ACCESS_KEY=""
# R2_BUCKET_NAME=""

# =============================================================================
# EXTERNAL SERVICES (Phase 2+)
# =============================================================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# Twilio - https://console.twilio.com
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Google Places API - https://console.cloud.google.com/apis/library/places-backend.googleapis.com
GOOGLE_PLACES_API_KEY=""

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
PORT="3000"

# Logging level: debug, info, warn, error
LOG_LEVEL="info"
